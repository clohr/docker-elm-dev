{
  "name": "elm-dev-client",
  "version": "1.0.0",
  "description": "Elm client development environment",
  "license": "BSD3",
  "scripts": {
    "install-elm": "npm i -g elm --unsafe-perm=true --allow-root",
    "install-packages": "npm i && /usr/local/bin/elm-package install -y",
    "install-app": "npm run install-elm && npm run install-packages",
    "build": "/usr/local/bin/elm-make ./src/Main.elm --output=./assets/app.js",
    "start-elm-live": "./node_modules/.bin/elm-live --path-to-elm-make=/usr/local/bin/elm-make ./src/Main.elm --output=./assets/app.js --pushstate",
    "start": "npm run install-app && npm run build && npm run start-elm-live"
  },
  "author": "Christian Lohr<christian.lohr@gmail.com>",
  "devDependencies": {
    "elm-live": "^2.7.5",
    "json-server": "^0.12.1"
  },
  "dependencies": {
    "elm": "^0.18.0"
  }
}
